<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dasoops.dasserver.plugin.image.mapper.ImageMapper">

    <resultMap id="BaseResultMap" type="com.dasoops.dasserver.plugin.image.entity.dbo.ImageDo">
        <id property="id" column="ID" jdbcType="BIGINT"/>
        <result property="keyword" column="KEYWORD" jdbcType="VARCHAR"/>
        <result property="fileName" column="FILE_NAME" jdbcType="VARCHAR"/>
        <result property="groupId" column="GROUP_ID" jdbcType="BIGINT"/>
        <result property="authorId" column="AUTHOR_ID" jdbcType="BIGINT"/>
        <result property="isDelete" column="IS_DELETE" jdbcType="TINYINT"/>
        <result property="createUser" column="CREATE_USER" jdbcType="BIGINT"/>
        <result property="createTime" column="CREATE_TIME" jdbcType="TIMESTAMP"/>
        <result property="updateUser" column="UPDATE_USER" jdbcType="BIGINT"/>
        <result property="updateTime" column="UPDATE_TIME" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        ID
        ,KEYWORD,FILE_NAME,
        GROUP_ID,AUTHOR_ID,IS_DELETE,
        CREATE_USER,CREATE_TIME,UPDATE_USER,
        UPDATE_TIME
    </sql>
    <select id="selectLikeKeyword" resultType="java.lang.String">
        SELECT `KEYWORD`
        FROM `tb_plugin_image`
        WHERE `KEYWORD` LIKE CONCAT('%', #{keyword}, '%')
    </select>
    <select id="selectMaxId" resultType="java.lang.Long">
        SELECT MAX(`ID`)
        FROM `tb_plugin_image`;
    </select>
    <select id="selectKeywordList" resultType="java.lang.String">
        SELECT `KEYWORD`
        FROM `tb_plugin_image`
    </select>
</mapper>
