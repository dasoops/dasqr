<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dasoops.dasserver.cq.mapper.PluginMapper">

    <resultMap id="BaseResultMap" type="com.dasoops.dasserver.cq.entity.dbo.PluginDo">
        <id property="id" column="ID" jdbcType="INTEGER"/>
        <result property="keyword" column="KEYWORD" jdbcType="VARCHAR"/>
        <result property="classPath" column="CLASS_PATH" jdbcType="VARCHAR"/>
        <result property="order" column="ORDER" jdbcType="INTEGER"/>
        <result property="level" column="LEVEL" jdbcType="TINYINT"/>
        <result property="description" column="DESCRIPTION" jdbcType="VARCHAR"/>
        <result property="enable" column="ENABLE" jdbcType="TINYINT"/>
        <result property="isDelete" column="IS_DELETE" jdbcType="TINYINT"/>
        <result property="createUser" column="CREATE_USER" jdbcType="BIGINT"/>
        <result property="createTime" column="CREATE_TIME" jdbcType="TIMESTAMP"/>
        <result property="updateUser" column="UPDATE_USER" jdbcType="BIGINT"/>
        <result property="updateTime" column="UPDATE_TIME" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        ID
        ,
        KEYWORD,CLASS_PATH,`ORDER`,
        `LEVEL`,DESCRIPTION,
        ENABLE,IS_DELETE,CREATE_USER,
        CREATE_TIME,UPDATE_USER,UPDATE_TIME
    </sql>
    <select id="selectAllClassPathOrderByOrder" resultType="java.lang.String">
        SELECT CLASS_PATH
        FROM TB_CORE_PLUGIN
        WHERE ENABLE = TRUE
        ORDER BY `ORDER`
    </select>
    <select id="getMaxOrder" resultType="java.lang.Integer">
        SELECT `ORDER`
        FROM TB_CORE_PLUGIN
        WHERE IS_DELETE = 0
        ORDER BY `ORDER` LIMIT 1
    </select>


</mapper>
